<h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <ul>
  <% @user.errors.full_messages.each do |error| %>
    <li style="color:red;"><%= error %></li>
  <% end %>
  </ul>
  <div class="mb-3">
    <label for="username" class="form-label">Username:</label>
    <%= f.text_field :username, placeholder: 'Enter username', class: 'form-control' %>
  </div>
  <div class="mb-3">
    <label for="fullname" class="form-label">Full Name:</label>
    <%= f.text_field :fullname, placeholder: 'Enter your full name', class: 'form-control' %>
  </div>
  <div class="mb-3">
    <label for="photo" class="form-label">Profile Picture:</label>
    <%= f.file_field :photo, direct_upload: true, accept: 'image/png,image/jpeg', class: 'form-control' %>
  </div>
  <div class="mb-3">
    <label for="coverimage" class="form-label">Cover Image:</label>
    <%= f.file_field :coverimage, accept: 'image/png,image/jpeg', class: 'form-control' %>
  </div>
  <%= f.submit class: 'btn btn-secondary' %>
<% end %>
