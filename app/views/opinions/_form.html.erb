<div class="form-padding">
<%= form_for @opinion do |f| %>
  <ul>
  <% @opinion.errors.full_messages.each do |error| %>
    <li style="color:red;"><%= error %></li>
  <% end %>
  </ul>

  <div class="mb-3">
    <label for="text" class="form-label">New review:</label>
    <%= f.text_field :text, placeholder: 'Write new review', class: 'form-control' %>
  </div>
  <%= f.submit 'Create Review', class: 'btn btn-secondary' %>
<% end %>
</div>
