<%= stylesheet_link_tag 'right_nav_styles' %>

<div class="right-panel">
      <div class="current-user">
        <img src="/assets/SNPhoto.jpg" alt="profile picture">
        <span>Jorge Torres</span>
      </div>
      <div class="stats flex">
        <span>
          <p>184</p>
          <p>followers</p>
        </span>
        <span>
          <p>200</p>
          <p>following</p>
        </span>
      </div>
      <h3>Who to follow</h3>
      <ul><% @not_followed_users.each do |usr| %>
        <li>
          <%#= link_to usr.username, user_path(usr.id) %>
          <%= usr.username %>
        </li>
        <% end %>
      </ul>
    </div>

<h1>Food Reviews</h1>
<%= render 'form' %> 
<h4 class="mt-4">Latest Reviews:</h4>
<ul><br>
  <% @opinions.each do |op| %>
    <li><%= op.text %> by: <%= op.author.username%></li>
  <% end %>
</ul>